<% title("Profile Sumarry") %>
<% subtitle("Here you'll find various details about your profile.") %> 
<% @imgTitle = "profile.png" %>

<h3><%=h @user.login %></h3>
<p class="status_message"><%= unless @statut.nil? then @status.message end %></p>
 
<p>
  <b>Login count:</b>
  <%=h @user.login_count %>
</p>
 
<p>
  <b>Last request at:</b>
  <%=h @user.last_request_at %>
</p>
 
<p>
  <b>Last login:</b>
  <%=h time_ago_in_words(@user.last_login_at) %> ago
</p>
 
<p>
  <b>You are online for:</b>
  <%=h time_ago_in_words(@user.current_login_at) %>
</p>
 
<p>
  <b>Last login ip:</b>
  <%=h @user.last_login_ip %>
</p>
 
<p>
  <b>Current login ip:</b>
  <%=h @user.current_login_ip %>
</p>

<span class="link edit"><%= link_to 'Edit', edit_user_path %></span><br/><br/> 
<span class="link edit"><%= link_to 'Update my status', new_user_status_path(current_user.id) %></span><br/><br/>
<span class="link edit">
	<%=
		unless @status.nil?
			link_to 'Edit my status', edit_user_status_path(current_user.id, @status.id)
		else
			'No status to edit'
		end
		#link_to_unless(@status.nil?, 'Edit my status', edit_user_status_path(current_user.id, @status.id))
	%></span><br/><br/> 
<span class="link edit"><%= link_to 'Manage my statuses', user_statuses_path(current_user.id) %>