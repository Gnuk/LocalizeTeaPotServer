<% title("Edit My Account") %>
<% subtitle("Here you can edit your profile.") %> 
<% form_for @user, :url => user_path(current_user.id) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>
 
<br /><%= link_to "My Profile", user_path(current_user.id) %>